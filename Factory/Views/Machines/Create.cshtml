<h2>Add a new machine</h2>
@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class ="main">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class = "input" , required = "required"})

    @Html.Label("Select engineer: ")
    @Html.DropDownList("EngineerId", string.Empty)

    <input type="submit" value="Add new machine" class="btn btn-submit" />
  }
</div>

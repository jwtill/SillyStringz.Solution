@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
}

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
}

<ul class="menu">
  <li>@Html.ActionLink("See all machines", "Index", "Machines")</li>
  <li>@Html.ActionLink("See all engineers", "Index", "Engineers")</li>
  <li>@Html.ActionLink("Add new machine", "Create", "Machines")</li>
  <li>@Html.ActionLink("Add new engineer", "Create", "Engineers")</li>
   <li>@Html.ActionLink("Home", "Index", "Home")</li>
</ul>
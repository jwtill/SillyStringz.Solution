@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}

<ul>
@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
}
</ul>

<ul class="menu">
  <li>@Html.ActionLink("See all machines", "Index", "Machines")</li>
  <li>@Html.ActionLink("See all engineers", "Index", "Engineers")</li>
  <li>@Html.ActionLink("Add new machine", "Create", "Machines")</li>
  <li>@Html.ActionLink("Add new engineer", "Create", "Engineers")</li>
  <li>@Html.ActionLink("Home", "Index", "Home")</li>
</ul>